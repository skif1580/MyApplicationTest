<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/crv_item_movies"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginEnd="14dp"
    android:layout_marginBottom="14dp"
    android:background="@drawable/ic_border">


    <ImageView
        android:id="@+id/ivMoviePoster"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_0_5x"
        android:layout_marginTop="@dimen/spacing_0_5x"
        android:layout_marginEnd="@dimen/spacing_0_5x"
        android:scaleType="centerCrop"
        app:layout_constraintBottom_toTopOf="@+id/tv_movie_name"
        app:layout_constraintDimensionRatio="0.7:1"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:src="@drawable/movie" />

    <ImageView
        android:id="@+id/iv_movie_mask"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_mask__movies"
        app:layout_constraintBottom_toTopOf="@+id/tv_movie_name"
        app:layout_constraintEnd_toEndOf="@id/ivMoviePoster"
        app:layout_constraintStart_toStartOf="@+id/ivMoviePoster"
        app:layout_constraintTop_toTopOf="@+id/ivMoviePoster" />


    <ImageView
        android:id="@+id/iv_like"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="13dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_like"
        app:layout_constraintEnd_toEndOf="@+id/ivMoviePoster"
        app:layout_constraintTop_toTopOf="@+id/ivMoviePoster" />

    <TextView
        android:id="@+id/tv_year"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginStart="@dimen/spacing_2x"
        android:layout_marginTop="@dimen/spacing_2x"
        android:background="@drawable/ic_rectangle__movie"
        android:backgroundTint="@color/background_color"
        android:gravity="center"
        android:textColor="@color/color_white"
        android:textSize="@dimen/text_size_body"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="@string/age_restrictions" />

    <TextView
        android:id="@+id/tv_movie_tags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="30dp"
        android:text="@string/avengers_movie_tags"
        android:textColor="@color/pink_dark"
        android:textSize="@dimen/text_size_movie_tags"
        app:layout_constraintBottom_toTopOf="@+id/tv_movie_name"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <ImageView
        android:id="@+id/star_movie_1"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_2x"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_star_icon__movie"
        app:layout_constraintEnd_toStartOf="@+id/star_movie_2"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/ivMoviePoster"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_tags"
        app:tint="@color/pink_light" />

    <ImageView
        android:id="@+id/star_movie_2"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_star_icon__movie"
        app:layout_constraintEnd_toStartOf="@+id/star_movie_3"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/star_movie_1"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_tags"
        app:tint="@color/pink_light" />

    <ImageView
        android:id="@+id/star_movie_3"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_star_icon__movie"
        app:layout_constraintEnd_toStartOf="@+id/star_movie_4"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/star_movie_2"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_tags"
        app:tint="@color/pink_light" />

    <ImageView
        android:id="@+id/star_movie_4"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="@dimen/spacing_0_5x"
        android:layout_marginTop="4dp"
        android:src="@drawable/ic_star_icon__movie"
        app:layout_constraintEnd_toStartOf="@+id/star_movie_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/star_movie_3"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_tags"
        app:tint="@color/pink_light" />

    <ImageView
        android:id="@+id/star_movie_5"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_marginStart="2dp"
        android:layout_marginTop="4dp"
        android:layout_marginEnd="8dp"
        android:src="@drawable/ic_star_icon__movie"
        app:layout_constraintEnd_toStartOf="@+id/tv_movie_reviews_count"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/star_movie_4"
        app:layout_constraintTop_toBottomOf="@+id/tv_movie_tags"
        app:tint="@color/pink_light" />

    <TextView
        android:id="@+id/tv_movie_reviews_count"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="60dp"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="16dp"
        android:gravity="center_vertical"
        android:text="@string/reviews_count"
        android:textColor="@color/gray_dark"
        android:textSize="@dimen/text_size_movie_tags"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_movie_name"
        app:layout_constraintEnd_toEndOf="@+id/crv_item_movies"
        app:layout_constraintStart_toStartOf="@+id/crv_item_movies" />

    <TextView
        android:id="@+id/tv_movie_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/spacing_2x"
        android:layout_marginEnd="@dimen/spacing_2x"
        android:gravity="center_vertical"
        android:textColor="@color/gradient_text"
        android:textSize="@dimen/text_size_sub_title"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@+id/tv_movie_duration"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="ssssss sssssss ssss ssssss ssssss ssssssss fffffff fffff ssss" />

    <TextView
        android:id="@+id/tv_movie_duration"
        android:layout_width="0dp"
        android:layout_height="12dp"
        android:layout_marginStart="@dimen/spacing_2x"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="@dimen/spacing_2x"
        android:layout_marginBottom="8dp"
        android:gravity="center_vertical"
        android:textColor="@color/gray_dark2"
        android:textSize="@dimen/text_size_movie_tags"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/crv_item_movies"
        app:layout_constraintStart_toStartOf="@+id/crv_item_movies" />

</androidx.constraintlayout.widget.ConstraintLayout>