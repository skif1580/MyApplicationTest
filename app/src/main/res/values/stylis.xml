<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="RatingBar" parent="android:style/Widget.Material.RatingBar">
        <item name="android:minHeight">12dp</item>
        <item name="android:maxHeight">12dp</item>
        <item name="colorControlNormal">@color/ratingBarPasive</item>
        <item name="colorControlActivated">@color/ratingBarActive</item>
    </style>

    <style name="heading">
        <item name="android:shadowRadius">12</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:textSize">14sp</item>
        <item name="android:letterSpacing">-0.01</item>

    </style>

    <style name="name">
        <item name="fontFamily">Roboto</item>
        <item name="lineHeight">40sp</item>
        <item name="android:shadowDx">0</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowColor">#80000000</item>
        <item name="android:textSize">40sp</item>
        <item name="android:letterSpacing">-0.01</item>
        <item name="android:textColor">#ECECEC</item>
    </style>

    <style name="storyLine">
        <item name="android:shadowColor">#80000000</item>
        <item name="android:shadowDy">6</item>
        <item name="android:shadowRadius">12</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#ECECEC</item>
    </style>

    <style name="back">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="genre">
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">#FF3466</item>
    </style>

    <style name="reviews">
        <item name="lineHeight">20sp</item>
        <item name="android:textColor">#6D6D80</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="after">
        <item name="android:textColor">#ffffff</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="name_after">
        <item name="android:textColor">#D8D8D8</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">normal</item>
    </style>
</resources>